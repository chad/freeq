<Application x:Class="Freeq.Windows.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:conv="clr-namespace:Freeq.Windows.Converters"
             StartupUri="Views/ShellWindow.xaml">
    <Application.Resources>
        <!-- Converters -->
        <conv:BoolToVisibilityConverter x:Key="BoolToVis" />
        <conv:InverseBoolToVisibilityConverter x:Key="InvBoolToVis" />
        <conv:IntToVisibilityConverter x:Key="IntToVis" />
        <conv:TimestampConverter x:Key="TimestampConv" />
        <conv:NullToVisibilityConverter x:Key="NullToVis" />

        <!-- Colors -->
        <SolidColorBrush x:Key="BgDark" Color="#1e1e2e"/>
        <SolidColorBrush x:Key="BgSidebar" Color="#181825"/>
        <SolidColorBrush x:Key="BgSurface" Color="#313244"/>
        <SolidColorBrush x:Key="BgInput" Color="#45475a"/>
        <SolidColorBrush x:Key="FgText" Color="#cdd6f4"/>
        <SolidColorBrush x:Key="FgSubtext" Color="#a6adc8"/>
        <SolidColorBrush x:Key="FgDim" Color="#6c7086"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#89b4fa"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#a6e3a1"/>
        <SolidColorBrush x:Key="AccentRed" Color="#f38ba8"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#f9e2af"/>
        <SolidColorBrush x:Key="AccentPeach" Color="#fab387"/>
        <SolidColorBrush x:Key="UnreadBadge" Color="#f38ba8"/>

        <!-- Base TextBlock style -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource FgText}"/>
            <Setter Property="FontFamily" Value="Segoe UI, Inter, sans-serif"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
    </Application.Resources>
</Application>
